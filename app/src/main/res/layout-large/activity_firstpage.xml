<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome_final"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@color/color1.1"
        android:id="@+id/header"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_addMedia"
            android:layout_weight="0.36"
            android:background="@color/color1.1"
            android:src="@android:drawable/ic_menu_add"
            android:onClick="toAppContent" />

        <ImageView
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:id="@+id/logoSkup"
            android:src="@drawable/logo14"
            android:layout_weight="0.16" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_search"
            android:background="@color/color1.1"
            android:layout_margin="5dp"
            android:onClick="btnSearch"
            android:src="@android:drawable/ic_menu_search"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="728dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            android:layout_weight="1" />

    </LinearLayout>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView7"
            android:src="@drawable/android_app_store_" />

    </FrameLayout>

</LinearLayout>