<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_gray_transp"
        android:layout_weight="0.3"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo14"
            android:id="@+id/logoSkup" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_weight="0.5">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/background_gray_transp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_whrite"
        android:padding="5dp"
        android:layout_weight="0.2">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/btn_search"
            android:layout_weight="1"
            android:background="@drawable/background_gray_transp"
            android:layout_margin="5dp"
            android:onClick="btnSearch" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/btn_text"
            android:layout_weight="1"
            android:background="@drawable/background_gray_transp"
            android:layout_margin="5dp"
            android:onClick="btnText" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/btn_camera"
            android:layout_weight="1"
            android:background="@drawable/background_gray_transp"
            android:layout_margin="5dp"
            android:onClick="btnCamera" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/btn_picture"
            android:layout_weight="1"
            android:background="@drawable/background_gray_transp"
            android:layout_margin="5dp"
            android:onClick="btnPicture" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_btn_speak_now"
            android:id="@+id/btn_audio"
            android:layout_weight="1"
            android:background="@drawable/background_gray_transp"
            android:layout_margin="5dp"
            android:onClick="btnAudio" />

    </LinearLayout>
</LinearLayout>