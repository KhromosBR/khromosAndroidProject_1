<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcomel_land"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/logo14"
            android:id="@+id/imageView4"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="137dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color1.1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/login_field"
                android:hint="@string/login"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"            android:textAlignment="center"
                android:background="@color/color1.1"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_field"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"            android:hint="@string/password"
                android:textAlignment="center"
                android:background="@color/color1.1"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1.1"
            android:layout_weight="1">

            <CheckBox
                android:text="@string/remember_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/checkBox"
                android:textColor="@android:color/black"
                android:background="@color/color1.1"
                android:layout_weight="1"
                android:textSize="12sp"
                />

            <TextView
                android:text="@string/forgot_password"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:background="@color/color1.1"
                android:paddingTop="7dp"
                android:paddingLeft="35dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:text="@string/sign_in"
            android:onClick="ButtonSignIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_SignIn"
            android:layout_weight="1"
            android:background="@drawable/curve_background"
            android:textColor="@android:color/black"            android:textSize="20sp"
            android:layout_marginRight="10dp"/>

        <Button
            android:text="@string/register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_register"
            android:layout_weight="1"
            android:onClick="ButtonRegister"
            android:background="@drawable/curve_background"
            android:textColor="@android:color/black"            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>