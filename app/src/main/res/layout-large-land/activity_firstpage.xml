<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:weightSum="1"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@color/buttonEndGradient">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo14"
            android:id="@+id/imageView4" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:background="@color/buttonEndGradient"
            android:id="@+id/btn_whrite"
            android:padding="5dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_search"
                android:id="@+id/btn_search"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:layout_margin="5dp"
                android:onClick="btnSearch (FirstPageActivity)" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:id="@+id/btn_text"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:layout_margin="5dp"
                android:onClick="btnText (FirstPageActivity)" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/btn_camera"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:layout_margin="5dp"
                android:onClick="btnCamera (FirstPageActivity)" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:id="@+id/btn_picture"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:layout_margin="5dp"
                android:onClick="btnPicture (FirstPageActivity)" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_btn_speak_now"
                android:id="@+id/btn_audio"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:layout_margin="5dp"
                android:onClick="btnAudio (FirstPageActivity)" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.11"></LinearLayout>

    </LinearLayout>

</LinearLayout>