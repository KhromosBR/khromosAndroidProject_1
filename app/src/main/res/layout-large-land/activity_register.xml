<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcomel_land"
    android:paddingLeft="100dp"
    android:paddingRight="100dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/logo14"
            android:id="@+id/imageView4"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="@color/color1.1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_field"
            android:textSize="25sp"
            android:layout_weight="1"
            android:hint="@string/email"
            android:textAlignment="center"
            android:textColorHint="@color/color4"
            android:textColor="@android:color/black"
            android:background="@color/color1.1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/confirm_email"
            android:textSize="30sp"
            android:layout_weight="1"
            android:hint="@string/confirm_email"
            android:textAlignment="center"
            android:textColorHint="@color/color4"
            android:textColor="@android:color/black"
            android:background="@color/color1.1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_field"
            android:hint="@string/password"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textColorHint="@color/color4"
            android:textColor="@android:color/black"
            android:background="@color/color1.1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirm_password"
            android:hint="@string/confirm_password"
            android:textSize="30dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColorHint="@color/color4"
            android:textColor="@android:color/black"
            android:background="@color/color1.1" />

    </LinearLayout>

    <Button
        android:text="@string/sign_in"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_SignIn"
        android:background="@drawable/curve_background"
        android:onClick="btn_ToWelcome"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="0.01"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:textSize="25sp"/>

</LinearLayout>